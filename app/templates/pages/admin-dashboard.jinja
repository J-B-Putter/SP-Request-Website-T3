  User Registration page
  - Form for adding a new user
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

   Admin Dashboard

{% endblock %}


{% block content %}
{% if session.user_id == 1 %}
    <header>
        <h2>Submit Response</h2>
    </header>
    {% for request in incomplete_requests %}
        <article>
            <h3><a href="{{ request.build_url }}">Build</a> </h3>
            <p>
                {{ request.description }}
            </p>
            <p>
                {{ request.mods }}
            </p>
            <p>
                {{ request.deadline }}
            </p>
            <a href="/respond/{{ request.id }}" role="button">Respond</a>
        </article>
    {% else %}
        No Requests Yet...
    {% endfor %}


{% else %}

    <h1>Oops!</h1>
    <p>
        <a href="/login">Login</a> to access these functions...
    </p>

{% endif %}

{% endblock %}
    