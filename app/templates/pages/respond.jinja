{#=====================================================
  Respond Page
  - Admin page to respond to a single request
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Respond

{% endblock %}


{% block content %}

    <article>

        <header>
            <h2>Respond to {{ request.builder }}</h2>
        </header>

        <form action="/submit-response/{{ request.req_id }}" method="POST">

            <textarea 
                name="notes" 
                placeholder="Notes" 
                required
            ></textarea>             
            
            <input
                type="text"
                name="response_url"
                placeholder="Postimages Gallery"
                required
            >
            
            <input
                type="text"
                name="preview_img"
                placeholder="Preview Image"
                required
            >  

            <button>Submit</button>
            <a href="/admin-dashboard" role="button">Cancel</a>
            
        </form>
        </article>

{% endblock %}

